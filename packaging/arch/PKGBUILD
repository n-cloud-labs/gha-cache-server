pkgname=gha-cache-server
pkgver=1.0.0
pkgrel=1
pkgdesc="Self-hosted compatibility server for the GitHub Actions cache API"
arch=('x86_64' 'aarch64')
url="https://github.com/n-cloud-labs/gha-cache-server"
license=('MIT')
depends=('gcc-libs' 'glibc' 'sqlite' 'systemd')
optdepends=(
  'postgresql: metadata database backend via DATABASE_URL'
  'mariadb-clients: MySQL-compatible metadata backend via DATABASE_URL'
  'sqlite: embedded metadata backend via DATABASE_URL'
  'minio: S3-compatible object storage backend for the cache blob store'
)
makedepends=('cargo' 'clang' 'pkgconf')
source=("https://github.com/n-cloud-labs/gha-cache-server/archive/refs/tags/v${pkgver}.tar.gz"
        "gha-cache-server.service"
        "gha-cache-server.sysusers"
        "gha-cache-server.tmpfiles")
sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP')
backup=('etc/gha-cache-server/env')

# Runtime configuration summary:
#   DATABASE_URL (required) selects the metadata database (PostgreSQL, MySQL or SQLite).
#   BLOB_STORE selects the blob storage backend (fs, s3 or gcs).
#   Backend-specific variables such as FS_ROOT, S3_BUCKET or GCS_BUCKET configure the
#   storage provider; see /etc/gha-cache-server/env for documented defaults.
#   Additional tuning variables like PORT, MAX_CONCURRENCY and REQUEST_TIMEOUT_SECS
#   may be exported via the service environment file.

prepare() {
  export CARGO_HOME="${srcdir}/cargo"
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's/"sqlite"/"sqlite-unbundled"/' Cargo.toml
  cargo fetch --locked
}

build() {
  export CARGO_HOME="${srcdir}/cargo"
  export CARGO_TARGET_DIR="${srcdir}/target"
  cd "${srcdir}/${pkgname}-${pkgver}"
  cargo build --release --frozen --locked
}

package() {
  export CARGO_TARGET_DIR="${srcdir}/target"
  cd "${srcdir}/${pkgname}-${pkgver}"

  install -Dm0755 "${CARGO_TARGET_DIR}/release/gha-cache-server" "${pkgdir}/usr/bin/gha-cache-server"

  install -d -m0750 "${pkgdir}/etc/gha-cache-server"
  install -Dm0640 packaging/config/env "${pkgdir}/etc/gha-cache-server/env"

  install -d -m0750 "${pkgdir}/var/lib/gha-cache-server"

  install -Dm0644 "${srcdir}/gha-cache-server.service" "${pkgdir}/usr/lib/systemd/system/gha-cache-server.service"
  install -Dm0644 "${srcdir}/gha-cache-server.sysusers" "${pkgdir}/usr/lib/sysusers.d/gha-cache-server.conf"
  install -Dm0644 "${srcdir}/gha-cache-server.tmpfiles" "${pkgdir}/usr/lib/tmpfiles.d/gha-cache-server.conf"

  install -Dm0644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm0644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}
